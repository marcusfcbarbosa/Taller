@model Taller.Web.Models.AddCarModel

@{
    ViewData["Title"] = "New Car";
}
<section class="section-conten padding-y container" style="min-height: 35vh">
    @await Html.PartialAsync("WarningErrors")
    <div class="card mx-auto" style="max-width: 380px; margin-top: 100px;">
        <div class="card-body">
            <h4 class="card-title mb-4">Welcome</h4>
            <form asp-controller="Home" asp-action="New" method="post">
                <div class="form-group">
                    <label asp-for="Color"></label>
                    <input asp-for="Color" id="color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" id="model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Make"></label>
                    <input asp-for="Make" id="make" class="form-control" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" id="year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" id="price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" id="btnRegister" class="btn btn-primary btn-block">Register</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">Already have an account?<a asp-controller="Home" asp-action="Index"> Log in</a></div>
    </div>

</section>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    <script type="text/javascript">
        "use strict";
        window.New = {
            events: function() {
                $("#btnRegister").click(function() {
                    var data_send = {
                        Color: $("#Color").val(),
                        Model: $("#Model").val(),
                        Make: $("#Make").val(),
                        Year: $("#Year").val(),
                        Price: $("#Price").val()
                    }
                    $.ajax({
                        url: "/New",
                        type: "post",
                        data: data_send,
                        async: true,
                        success: function(response) {

                        },
                        error: function(jqXHR, textStatus, errorThrown) {

                        }
                    });
                });
            },
            init: function() {
                New.events();
            }
        };
        $(document).ready(function() {
            window.New.init();
        });
    </script>